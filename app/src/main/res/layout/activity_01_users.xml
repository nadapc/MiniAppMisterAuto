<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gris_tres_claire">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_margin="@dimen/padding_l"
            android:indeterminateTint="@color/mister_auto_orange_dark"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_users"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/tv_list_vide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/liste_user_vide"
            android:padding="@dimen/padding"
            android:textColor="@color/mister_auto_gris"
            android:textSize="@dimen/text"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"/>

    </FrameLayout>

</layout>

